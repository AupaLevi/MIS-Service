@{
    ViewBag.Title = "EditPost";
}
@model MIS_Service.Models.PostDataObject
<br />
<br />
<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">

            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Edit Post</h4>
                @using (Html.BeginForm("ConfirmedEdit", "Post", new { postID = Model.Tic01 }, FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.HiddenFor(model => model.Tic01)
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="Tic01">修改 申請日期</label>
                        @Html.TextBoxFor(model => model.Tic01, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic02">修改 收件日期</label>
                        @Html.TextBoxFor(model => model.Tic02, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic03">修改 表單序號</label>
                        @Html.TextBoxFor(model => model.Tic03, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic04">修改 申請部門</label>
                        @Html.TextBoxFor(model => model.Tic04, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic05">修改 申請目的</label>
                        @Html.TextAreaFor(model => model.Tic05, new { @class = "form-control", rows = "2", id = "PostContent", name = "PostContent" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic06">修改 申請內容</label>
                        @Html.TextAreaFor(model => model.Tic06, new { @class = "form-control", rows = "3", id = "PostContent", name = "PostContent" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic07">修改 預定完成日</label>
                        @Html.TextBoxFor(model => model.Tic07, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        <label for="Tic08">修改 工單結案日</label>
                        @Html.TextBoxFor(model => model.Tic08, new { @class = "form-control" })
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Update"
                           onclick="@("window.location.href='" + @Url.Action("EditConfirmed", "Post",
                                        new { postID=Model.Tic01}) + "'");" />
                    <button type="button" class="btn btn-primary" onclick="history.go(-1)">Cancel</button>
                }
            </div>
        </div>
    </div>
</body>